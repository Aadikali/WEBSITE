    <!-- Hero Section -->
    <section class="page-hero">
        <div class="container">
            <h1 class="page-title">
                About <span class="text-accent">TechXservices</span>
            </h1>
            <p class="page-subtitle">
                Empowering the next generation of tech professionals through world-class education and mentorship
