        </div>
        
        <div class="testimonials-grid">
            <% if (reviews && reviews.length) { %>
            <div class="testimonials-grid">
                <% reviews.forEach(function(r) { %>
                <div class="testimonial-card">
                    <div class="testimonial-content">
                    <div class="testimonial-rating">
                        <% for (let i = 1; i <= 5; i++) { %>
                        <i class="fas fa-star <%= i <= r.rating ? 'active' : '' %>"></i>
                        <% } %>
                    </div>
                    <p class="testimonial-message">"<%= r.comment %>"</p>
                    </div>

                    <div class="testimonial-author">
                    <div class="author-info">
                        <h4 class="author-name"><%= r.username %></h4>
                        <h6 class="author-name"><%= r.designation %></h6>
                    </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <% } else { %>
            <p class="no-reviews">No reviews yet.</p>
            <% } %>

        </div>

        <div class="testimonial-button-container">
            <a href="/reviews" class="btn btn-primary testimonial-button me-3">View Reviews</a>
